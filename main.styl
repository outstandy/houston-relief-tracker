@import 'variables'

*
  margin: 0
  padding: 0

body
  background: $bg
  color: $black
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  font-size: 18px
  margin: 0
  padding: 0
  width: 100%

h1
  font-size: 3.33rem
  font-weight: 300
  line-height: 2.5rem


h2
  color: $purple--dark
  font-size: 1.278rem
  font-weight: bold
  margin-bottom: $line-height
  text-transform: uppercase

h3
  color: $black
  font-size: 1rem
  font-weight: bold

p
  font-size: 1rem
  line-height: 1.44
  margin: 0

a
  color: $purple
  text-decoration: underline

  &:hover
    color: $purple--dark

strong
  font-weight: 700

.wrapper
  margin: 0 auto
  max-width: 1024px
  padding: 0 $space

.callout
  color: $purple

.tracker
  &__header
    background: white
    border-bottom: 1px solid #E3E8FA
    margin-bottom: $space--big
    padding: $space--big 0
    width: 100%

  &__content
    display: flex
    flex-wrap: wrap

  &__right
    order: 2
    width: 30%
    @media(max-width: 640px)
      order: 0

  &__left
    order: 1
    width: 70%
    padding-right: $space
    @media(max-width: 640px)
      padding-right: 0

  &__left,
  &__right
    box-sizing: border-box

    @media(max-width: 640px)
      width: 100%

  &__section
    border-bottom: 1px solid $purple--light
    margin-bottom: $space--big
    padding-bottom: $space--big

    &:last-child
      border-bottom: none

    p
      margin-bottom: $line-height;

  &__update-callout
    border: 1px solid $purple--light
    margin-bottom: $space
    text-align: center
    padding: $space

  &__timestamp
    margin-bottom: $space

  &__update-details
    margin-bottom: $space

  &__button
    background: $purple
    border-radius: $corners
    color: white
    display: inline-block
    font-weight: 700
    padding: $space 0
    text-align: center
    text-decoration: none
    text-transform: uppercase
    transition: background 0.2s ease-out
    width: 100%

    &:hover
      background: $purple--dark
      color: white

  &__alert
    &--first-time
      border: 1px solid $red
      background: #fff
      margin-bottom: $space--big
      padding: $space

  &__list
    padding-left: $space

    .list-item
      margin-bottom: $space
